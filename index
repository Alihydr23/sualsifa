        {n:"Zü'l-Celâli ve'l-İkrâm", m:"Hem azamet hem ikram sahibi"}, {n:"El-Muksit", m:"Adaletle yapan"},
        {n:"El-Câmi", m:"İstediğini toplayan"}, {n:"El-Ganiyy", m:"Çok zengin"},
        {n:"El-Mugnî", m:"Zengin kılan"}, {n:"El-Mâni", m:"Engelleyen"},
        {n:"Ed-Dârr", m:"Elem veren"}, {n:"En-Nâfi", m:"Fayda veren"},
        {n:"En-Nûr", m:"Aydınlatan"}, {n:"El-Hâdî", m:"Hidayet veren"},
        {n:"El-Bedî", m:"Eşsiz yaratan"}, {n:"El-Bâkî", m:"Ebedi olan"},
        {n:"El-Vâris", m:"Her şeyin gerçek sahibi"}, {n:"Er-Reşîd", m:"Doğru yolu gösteren"},
        {n:"Es-Sabûr", m:"Çok sabırlı"}
    ];

    let count = parseInt(localStorage.getItem('ss_v4_c')) || 0;
    let name = localStorage.getItem('ss_v4_n') || "Allah";
    let mean = localStorage.getItem('ss_v4_m') || "Celle Celaluhu";

    function update() {
        document.getElementById('counter').innerText = count;
        document.getElementById('label').innerText = name;
        document.getElementById('desc').innerText = mean;
        localStorage.setItem('ss_v4_c', count);
        localStorage.setItem('ss_v4_n', name);
        localStorage.setItem('ss_v4_m', mean);
    }

    function stepDown() {
        if(count > 0) {
            count--;
            if(navigator.vibrate) navigator.vibrate(40);
            update();
            if(count === 0) {
                if(navigator.vibrate) navigator.vibrate([200, 100, 200]);
                setTimeout(()=>alert("Zikir tamamlandı."), 100);
            }
        }
    }

    function reset() { if(confirm("Sıfırlansın mı?")) { count = 0; update(); } }

    function openPanel(id) {
        document.getElementById(id + '-panel').style.display = 'flex';
        if(id === 'list') {
            const container = document.getElementById('esmaList');
            container.innerHTML = esmalar.map(e => `
                <div class="list-item" onclick="selectEsma('${e.n}', '${e.m}')">
                    <b>${e.n}</b>
                    <div>${e.m}</div>
                </div>
            `).join('');
        }
    }

    function closePanels() {
        document.querySelectorAll('.panel').forEach(p => p.style.display = 'none');
    }

    function setTarget() {
        const input = document.getElementById('targetInput');
        const val = parseInt(input.value);
        if(!isNaN(val) && val > 0) {
            count = val;
            update();
            closePanels();
            input.value = "";
        }
    }

    function selectEsma(n, m) {
        name = n; mean = m; count = 0;
        update();
        closePanels();
    }

    update();
</script>

