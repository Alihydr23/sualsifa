    // GÃœNLÃœK AYETÄ° GETÄ°R
    function getDailyVerse() {
        const today = new Date();
        const start = new Date(today.getFullYear(), 0, 0);
        const diff = today - start;
        const oneDay = 1000 * 60 * 60 * 24;
        const dayOfYear = Math.floor(diff / oneDay);
        const index = dayOfYear % dailyVerses.length;
        return dailyVerses[index];
    }

    // INIT
    function init() {
        load();
        
        // GÃ¼nlÃ¼k ayeti gÃ¶ster
        const verse = getDailyVerse();
        document.getElementById('verseText').textContent = verse.text;
        document.getElementById('verseRef').textContent = verse.ref;
        document.getElementById('fullVerseText').textContent = verse.text;
        document.getElementById('fullVerseRef').textContent = verse.ref;
        
        update();
        renderEsmalar();
        renderMyZikirs();
        renderVerses();
        
        document.getElementById('tapArea').addEventListener('click', tap);
        document.getElementById('tapArea').addEventListener('touchstart', (e) => {
            e.preventDefault();
            tap();
        }, { passive: false });
    }

    function load() {
        const saved = localStorage.getItem('sualSifa_v7');
        if (saved) {
            const parsed = JSON.parse(saved);
            state.count = parsed.count || 0;
            state.target = parsed.target || 33;
            state.current = parsed.current || { n: "Allah", m: "Celle Celaluhu" };
            state.history = parsed.history || [];
            state.customZikirs = parsed.customZikirs || [];
        }
    }

    function save() {
        localStorage.setItem('sualSifa_v7', JSON.stringify({
            count: state.count,
            target: state.target,
            current: state.current,
            history: state.history,
            customZikirs: state.customZikirs
        }));
    }

    function tap() {
        if (state.count < state.target) {
            state.undo.push(state.count);
            if (state.undo.length > 10) state.undo.shift();
            
            state.count++;
            
            if (navigator.vibrate) navigator.vibrate(30);
            
            update();
            
            if (state.count === state.target) {
                complete();
            }
        } else {
            if (navigator.vibrate) navigator.vibrate([50, 100, 50]);
        }
    }

    function complete() {
        if (navigator.vibrate) navigator.vibrate([100, 50, 100, 50, 200]);
        
        const entry = {
            date: new Date().toISOString(),
            name: state.current.n,
            count: state.count,
            target: state.target
        };
        
        state.history.unshift(entry);
        if (state.history.length > 100) state.history.pop();
        
        save();
        
        setTimeout(() => {
            alert(`ðŸŒŸ ${state.count} ${state.current.n} tamamlandÄ±!\n\nAllah kabul etsin.`);
            state.count = 0;
            state.undo = [];
            update();
        }, 300);
    }

    function undo() {
        if (state.undo.length > 0) {
            state.count = state.undo.pop();
            update();
            showToast('Geri alÄ±ndÄ±');
        }
    }

    function reset() {
        if (confirm('Zikir sÄ±fÄ±rlansÄ±n mÄ±?')) {
            state.undo = [];
            state.count = 0;
            update();
            showToast('SÄ±fÄ±rlandÄ±');
        }
    }

    function setTarget(t) {
        state.target = t;
        state.count = 0;
        state.undo = [];
        update();
        
        document.querySelectorAll('.quick-targets button').forEach(btn => {
            btn.classList.toggle('active', parseInt(btn.textContent) === t);
        });
    }

    function update() {
        document.getElementById('counter').textContent = state.count;
        document.getElementById('cur').textContent = state.count;
        document.getElementById('tgt').textContent = state.target;
        document.getElementById('label').textContent = state.current.n;
        document.getElementById('mean').textContent = state.current.m;
        
        const circle = document.getElementById('progress');
        const circumference = 2 * Math.PI * 115;
        const progress = state.count / state.target;
        const offset = circumference - (progress * circumference);
        
        circle.style.strokeDasharray = circumference;
        circle.style.strokeDashoffset = offset;
        circle.style.stroke = state.count >= state.target ? 'var(--success)' : 'var(--gold)';
        
        save();
    }

    // ZÄ°KÄ°R EKLEME FONKSÄ°YONLARI
    function showAddForm() {
        document.getElementById('addForm').style.display = 'block';
        document.getElementById('zikirName').focus();
    }

    function hideAddForm() {
        document.getElementById('addForm').style.display = 'none';
        document.getElementById('zikirName').value = '';
        document.getElementById('zikirMean').value = '';
        document.getElementById('zikirTarget').value = '33';
    }

    function addZikir() {
        const name = document.getElementById('zikirName').value.trim();
        const mean = document.getElementById('zikirMean').value.trim();
        const target = parseInt(document.getElementById('zikirTarget').value) || 33;
        
        if (!name) {
            showToast('Zikir adÄ± gerekli');
            return;
        }
        
        const zikir = {
            id: Date.now(),
            n: name,
            m: mean || 'Ã–zel zikir',
            target: target
        };
        
        state.customZikirs.unshift(zikir);
        save();
        renderMyZikirs();
        hideAddForm();
        showToast('Zikir eklendi');
    }

    function renderEsmalar() {
        document.getElementById('lCont').innerHTML = esmalar.map((e, i) => `
            <div class="list-item" onclick="selectZikir({n:'${e.n}', m:'${e.m}'}, 'esma')">
                <div>
                    <b>${e.n}</b>
                    <small>${e.m}</small>
                </div>
            </div>
        `).join('');
    }

    function renderMyZikirs() {
        const container = document.getElementById('myZikirCont');
        
        // Ã–nce 99 Esma'yÄ± ekle, sonra Ã¶zel zikirler
        let html = '';
        
        // BaÅŸlÄ±k: 99 Esma
        html += '<div style="color:var(--gold); font-size:0.8rem; margin:10px 0; opacity:0.7;">99 ESMÃ‚</div>';
        
        esmalar.slice(0, 10).forEach(e => {
            html += `
                <div class="list-item" onclick="selectZikir({n:'${e.n}', m:'${e.m}', target:99}, 'esma')">
                    <div>
                        <b>${e.n}</b>
                        <small>${e.m}</small>
                    </div>
                </div>
            `;
        });
        
        // BaÅŸlÄ±k: Kendi Zikirlerim
        if (state.customZikirs.length > 0) {
            html += '<div style="color:var(--gold); font-size:0.8rem; margin:15px 0 10px; opacity:0.7;">KENDÄ° ZÄ°KÄ°RLERÄ°M</div>';
            
            state.customZikirs.forEach(z => {
                html += `
                    <div class="list-item" onclick="selectZikir({n:'${z.n}', m:'${z.m}', target:${z.target}}, 'custom')">
                        <div>
                            <b>${z.n}</b>
                            <small>${z.m} â€¢ ${z.target} adet</small>
                        </div>
                        <button onclick="deleteZikir(${z.id}, event)" style="background:none; border:none; color:var(--danger); font-size:1.2rem;">ðŸ—‘</button>
                    </div>
                `;
            });
        }
        
        container.innerHTML = html || '<div class="empty-state">HenÃ¼z Ã¶zel zikir eklenmemiÅŸ</div>';
    }

    function renderVerses() {
        document.getElementById('versesCont').innerHTML = dailyVerses.map((v, i) => `
            <div class="list-item" onclick="showVerse(${i})">
                <div>
                    <b>${v.ref}</b>
                    <small>${v.text}</small>
                </div>
            </div>
        `).join('');
    }

    function showVerse(index) {
        const v = dailyVerses[index];
        document.getElementById('fullVerseText').textContent = v.text;
        document.getElementById('fullVerseRef').textContent = v.ref;
        openPanel('verse');
    }

    function selectZikir(zikir, type) {
        state.current = { n: zikir.n, m: zikir.m };
        state.target = zikir.target || 33;
        state.count = 0;
        state.undo = [];
        update();
        closeP();
        showToast(`SeÃ§ildi: ${zikir.n}`);
    }

    function deleteZikir(id, event) {
        event.stopPropagation();
        if (confirm('Bu zikir silinsin mi?')) {
            state.customZikirs = state.customZikirs.filter(z => z.id !== id);
            save();
            renderMyZikirs();
            showToast('Silindi');
        }
    }

    function openPanel(id) {
        document.getElementById(id + '-panel').style.display = 'flex';
        if (id === 'history') renderHistory();
        if (id === 'myzikir') renderMyZikirs();
    }

    function closeP() {
        document.querySelectorAll('.panel').forEach(p => p.style.display = 'none');
        hideAddForm();
    }

    function renderHistory() {
        const container = document.getElementById('hCont');
        if (state.history.length === 0) {
            container.innerHTML = '<div class="empty-state">HenÃ¼z kayÄ±t yok</div>';
            return;
        }
        
        container.innerHTML = state.history.map(h => {
            const date = new Date(h.date);
            return `
                <div class="list-item">
                    <div>
                        <b>${h.name}</b>
                        <small>${date.toLocaleDateString('tr-TR')}</small>
                    </div>
                    <span>${h.count}/${h.target}</span>
                </div>
            `;
        }).join('');
    }

    function showToast(msg) {
        const toast = document.getElementById('toast');
        toast.textContent = msg;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 2000);
    }

    init();
</script>
</body>
</html>
